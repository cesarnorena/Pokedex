<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/pokemon_row_image"
            android:layout_width="@dimen/row_image"
            android:layout_height="@dimen/row_image"
            android:layout_marginEnd="@dimen/minimal_spacing"
            android:layout_marginRight="@dimen/minimal_spacing"
            android:contentDescription="@string/content_description" />

        <TextView
            android:id="@+id/pokemon_row_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pokemon_row_image"
            android:layout_toRightOf="@id/pokemon_row_image"
            android:text="No.001"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/pokemon_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pokemon_row_number"
            android:layout_toEndOf="@id/pokemon_row_image"
            android:layout_toRightOf="@id/pokemon_row_image"
            android:gravity="center_vertical"
            android:text="Pikachu"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_xlarge" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
