<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:clickable="true"
    android:focusable="true">

    <include
        android:id="@+id/pokemon_detail_toolbar"
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemon_detail_toolbar"
        android:layout_marginBottom="@dimen/minimal_spacing"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/minimal_spacing"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/pokemon_detail_image"
            android:layout_width="@dimen/detail_image"
            android:layout_height="@dimen/detail_image"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/minimal_spacing"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/img_pikachu" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_image"
        android:layout_marginBottom="@dimen/minimal_spacing"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding">

            <TextView
                android:id="@+id/pokemon_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_large"
                tools:text="No.052" />

            <TextView
                android:id="@+id/pokemon_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pokemon_detail_number"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_xlarge"
                android:textStyle="bold"
                tools:text="Pikachu" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/pokemon_detail_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="5dp" />

</RelativeLayout>
